<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <Button
            android:id="@+id/btn_backOfSystemToperBar"
            android:layout_width="60dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_blue_to_red"
            android:text="＜"
            android:textColor="#fff"
            android:textSize="20dip" /> 

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_toLeftOf="@+id/btn_okOfSystemToperBar"
            android:layout_toRightOf="@+id/btn_backOfSystemToperBar"
            android:background="#0EA6EE"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_okOfSystemToperBar"
            android:layout_width="60dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_blue_to_red"
            android:text="√"
            android:textColor="#fff"
            android:textSize="20dip" />
    </RelativeLayout>		
