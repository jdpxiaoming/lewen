<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d9ecfb"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            layout="@layout/toper_bar_yuntai" />

         <com.mm.android.avplaysdk.render.BasicGLSurfaceView
	        android:id="@+id/screenOfVideo"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
            android:layout_weight="3"
	        >
	    </com.mm.android.avplaysdk.render.BasicGLSurfaceView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_btn_play" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/selector_btn_stop" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/video_txt_style1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:text="@string/video_speak" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageButton
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:background="@drawable/selector_btn_speak" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/icon_video_clock" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/img_video_capture" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/icon_video_save" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/video_txt_style1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:text="@string/video_yinliang" 
                        />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" 
                        >

                        <RelativeLayout
		                            android:layout_width="fill_parent"
		                            android:layout_height="fill_parent"
		                            android:layout_weight="1"
		                            >
							<LinearLayout 
							    		android:layout_width="fill_parent"
							    		android:layout_height="3dp"
							    		android:background="@drawable/line_video_voice2"
							    		android:layout_centerVertical="true"
							    		/>
							<LinearLayout 
							    		android:id="@+id/lin_voice"
							    		android:layout_width="30dp"
							    		android:layout_height="3dp"
							    		android:orientation="horizontal"
							    		android:background="@drawable/line_video_voice1"
							    		android:layout_centerVertical="true"
							    		/>
							<ImageView 
							    		android:layout_width="20dp"
							    		android:layout_height="20dp"
							    		android:src="@drawable/icon_video_vioce"
							    		android:layout_toRightOf="@id/lin_voice"
							    		android:layout_centerVertical="true"
							    		/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_margin="10dp"
                >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:src="@drawable/selector_btn_video_lux" 
                            android:scaleType="centerInside"
                            android:background="#00000000"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:src="@drawable/selector_btn_video_guij" 
                            android:scaleType="centerInside"
                            android:background="#00000000"
                            android:visibility="gone"
                            />
                    </LinearLayout>
            </LinearLayout>
            
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="15"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="0dp" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/footer" />
    </LinearLayout>

</LinearLayout>