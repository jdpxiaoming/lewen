<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    			android:orientation="vertical" 
    			android:id="@+id/help_layout" 
    			android:layout_width="fill_parent" 
    			android:layout_height="fill_parent"
 				xmlns:android="http://schemas.android.com/apk/res/android"
 				>
    <com.poe.lewen.view.SlowFlipGallery 
        						android:id="@+id/gallery" 
        						android:layout_width="fill_parent" 
        						android:layout_height="fill_parent" 
        						android:unselectedAlpha="1.00"
        						/>
    <LinearLayout 
        		android:gravity="center" 
        		android:id="@+id/dot_linearlayout" 
        		android:paddingTop="15.0dip" 
        		android:paddingBottom="15.0dip" 
        		android:layout_width="fill_parent" 
        		android:layout_height="wrap_content" 
        		android:layout_alignParentBottom="true"
        		android:layout_marginBottom="50dp"
        		>
        <com.poe.lewen.view.NumberDotImageView 
            				android:id="@+id/dot_imageview" 
            				android:layout_width="fill_parent" 
            				android:layout_height="wrap_content" 
            				/>
        
    </LinearLayout>
    <ImageButton
    	    		android:id="@+id/btnOfHelpShowImageItem"
    	    		android:layout_width="100dp"
    	    		android:layout_height="30dp"
    	    		android:background="@drawable/android_help_button1"
    	    		android:layout_alignParentRight="true"
    	    		android:layout_alignParentBottom="true"
    	    		android:layout_marginBottom="13dp"
    	    		android:layout_marginRight="10dp"
    	    		/>
    
</RelativeLayout>
